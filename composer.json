{
	"require-dev": {
		"jakub-onderka/php-parallel-lint": "0.9.2",
		"mediawiki/mediawiki-codesniffer": "16.0.0",
		"mediawiki/minus-x": "0.3.1",
		"jakub-onderka/php-console-highlighter": "0.3.2"
	},
	"scripts": {
		"fix": [
			"phpcbf",
			"minus-x fix ."
		],
		"test": [
			"parallel-lint . --exclude node_modules --exclude vendor",
			"phpcs -p -s",
			"minus-x check ."
		]
	}
}
